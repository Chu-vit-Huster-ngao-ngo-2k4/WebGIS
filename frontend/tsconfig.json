{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "outDir": "js",
    "rootDir": "src",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["DOM", "ES2018"],
    "sourceMap": false
  },
  "include": ["src/**/*"]
}
